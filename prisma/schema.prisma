generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  BUYER
  SELLER
  ADMIN
}

model User {
  id    String @id // Configured to match Clerk User ID
  email String @unique
  role  Role   @default(BUYER)

  // User Profile
  name  String?
  image String?

  // Relations
  shop    Shop?
  orders  Order[]
  reviews Review[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  notifications Notification[]
}

model Notification {
  id        String           @id @default(cuid())
  userId    String
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  title     String
  message   String
  type      NotificationType @default(INFO)
  isRead    Boolean          @default(false)
  link      String? // Optional link to related resource (e.g., /dashboard/orders/123)
  createdAt DateTime         @default(now())

  @@index([userId])
}

enum NotificationType {
  INFO
  SUCCESS
  WARNING
  ERROR
  ORDER
}

model Shop {
  id          String  @id @default(cuid())
  name        String
  description String?
  logo        String?
  coverImage  String?

  ownerId String @unique
  owner   User   @relation(fields: [ownerId], references: [id])

  products Product[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Category {
  id       String    @id @default(cuid())
  name     String    @unique
  products Product[]
}

model Product {
  id          String           @id @default(cuid())
  name        String
  description String
  price       Decimal          @db.Decimal(10, 2)
  inventory   Int              @default(0)
  images      String[] // Array of image URLs
  status      ProductStatus    @default(ACTIVE)
  condition   ProductCondition @default(NEW)
  co2Saved    Float            @default(0.0)

  // Relations
  shopId String
  shop   Shop   @relation(fields: [shopId], references: [id])

  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])

  reviews    Review[]
  orderItems OrderItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Order {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id])

  items  OrderItem[]
  total  Decimal     @db.Decimal(10, 2)
  status OrderStatus @default(PENDING)

  // Shipping Information
  shippingName         String?
  shippingAddressLine1 String?
  shippingAddressLine2 String?
  shippingCity         String?
  shippingState        String?
  shippingPostalCode   String?
  shippingCountry      String?

  // Cancellation & Refund Information
  cancelledAt        DateTime?
  cancellationReason String?
  refundId           String? // Stripe refund ID
  refundAmount       Decimal?  @db.Decimal(10, 2)
  stripeChargeId     String? // For tracking refunds

  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  shipments Shipment[]
}

model OrderItem {
  id      String @id @default(cuid())
  orderId String
  order   Order  @relation(fields: [orderId], references: [id])

  productId String
  product   Product @relation(fields: [productId], references: [id])

  quantity Int
  price    Decimal @db.Decimal(10, 2) // Snapshot of price at purchase
}

model Review {
  id      String  @id @default(cuid())
  rating  Int     @default(5)
  comment String?

  userId String
  user   User   @relation(fields: [userId], references: [id])

  productId String
  product   Product @relation(fields: [productId], references: [id])

  createdAt DateTime @default(now())
}

enum OrderStatus {
  PENDING
  PAID
  SHIPPED
  DELIVERED
  CANCELLED
  REFUNDED
  PARTIALLY_REFUNDED
  DISPUTED
}

enum ProductStatus {
  ACTIVE
  DRAFT
  OUT_OF_STOCK
  SOLD
}

enum ProductCondition {
  NEW
  LIKE_NEW
  REFURBISHED
}

model Shipment {
  id      String @id @default(cuid())
  orderId String
  order   Order  @relation(fields: [orderId], references: [id])

  // PostNord Tracking Information
  trackingNumber String  @unique
  carrier        String  @default("PostNord")
  serviceType    String? // e.g., "MyPack Home", "Parcel", etc.

  // Shipment Details
  status            ShipmentStatus @default(PENDING)
  estimatedDelivery DateTime?
  actualDelivery    DateTime?

  // Sender Information (Shop/Warehouse)
  senderName       String?
  senderAddress    String?
  senderCity       String?
  senderPostalCode String?
  senderCountry    String?

  // Recipient Information (from Order)
  recipientName       String
  recipientAddress    String
  recipientCity       String
  recipientPostalCode String
  recipientCountry    String

  // Package Details
  weight Float? // in kg
  length Float? // in cm
  width  Float? // in cm
  height Float? // in cm

  // PostNord API Response Data
  postnordShipmentId String? // PostNord's internal ID
  labelUrl           String? // URL to shipping label PDF

  // Tracking Events
  trackingEvents TrackingEvent[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model TrackingEvent {
  id         String   @id @default(cuid())
  shipmentId String
  shipment   Shipment @relation(fields: [shipmentId], references: [id], onDelete: Cascade)

  status      String // e.g., "In Transit", "Out for Delivery", "Delivered"
  description String? // Detailed description of the event
  location    String? // Location where event occurred
  timestamp   DateTime

  createdAt DateTime @default(now())
}

enum ShipmentStatus {
  PENDING // Shipment created but not yet picked up
  PICKED_UP // Package picked up by carrier
  IN_TRANSIT // Package in transit
  OUT_FOR_DELIVERY // Out for delivery
  DELIVERED // Successfully delivered
  FAILED_DELIVERY // Delivery attempt failed
  RETURNED // Returned to sender
  CANCELLED // Shipment cancelled
}
